    .header__menu 
        .container
            .header__menu-nav
                nav.nav.--burger
                    ul.nav__list
                        li.nav__item 
                            a.nav__link.linkHead(href="#0") Портфолио
                        li.nav__item 
                            a.nav__link.linkHead(href="#0") ОТЗЫВЫ
